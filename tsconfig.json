{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressExcessPropertyErrors": true,
    "declaration": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "strict": false,
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
     "node_modules",
     "lib",
     "dist",
     "docs",
  ]
}